  <div class='sub-container user-container'>
    <div class='row'>
      <%= image_tag "https://robohash.org/#{@user.role}#{@user.middle_name}.png", class: 'robot' %>
    </div>
    <div class='row edit-row'>
      <%= flip_form_helper(@user, :url => {:action => 'save_me' }, :html => {'data-parsley-validate' => ""}) do |f| %>
        <%= f.hidden_field :id %>
        <%= f.input :first_name, required: true %>
        <%= f.input :middle_name, required: !Flip.middle_name_optional? %>
        <%= f.input :last_name, required: true %>
        <%= f.input :role, required: true %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
